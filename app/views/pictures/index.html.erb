<h1>List of Pictures</h1>

<nav>
  <%= link_to "Add A New Picture", new_picture_url %>
</nav>

<ul>
  <% @pictures.each do |picture| %>
    <li>
      <%= image_tag picture.source, width: 240 %>
      <p><%= picture.caption %></p>
      <nav>
        <%= link_to "Show", picture_url(picture.id) %>
        <%= link_to "Edit", edit_picture_url(picture.id) %>
        <%= link_to "Delete", picture_url(picture.id), :method => 'delete' %>
      </nav>
    </li>
  <% end %>
</ul>
